<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %>
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>

  <%= f.fields_for :address, resource.build_address do |address_fields| %>
    <%= address_fields.text_field :street, placeholder: 'Street Address' %>
    <%= address_fields.text_field :city, placeholder: 'City' %>
    <%= address_fields.collection_select :province_id, Province.order(:name), :id, :name, { prompt: "Select Province" }, { required: true } %>
  <% end %>

  <%= f.submit "Sign up" %>
<% end %>


<%= render "devise/shared/links" %>
