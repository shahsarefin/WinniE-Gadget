<h2>Your Cart</h2>

<% if @order_items.present? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Your cart is empty.</p>
<% end %>